<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Students List" Height="450" Width="800">
    <DockPanel>
        <ListBox Name="NamesListBox" DockPanel.Dock="Left" Width="400" DisplayMemberPath="FullName"/>
        <StackPanel DockPanel.Dock="Right">
            <Button Name="AddButton" Content="Add" Margin="20,30" Click="AddButton_Click"></Button>
            <Button Name="ChangeButton" Content="Change" Margin="20,30" Click="ChangeButton_Click"></Button>
            <Button Name="RemoveButton" Content="Remove" Margin="20,30" Click="RemoveButton_Click"></Button>
        </StackPanel>
    </DockPanel>
</Window>
